{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run Tests",
        "type": "shell",
        "command": "npm test",
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "problemMatcher": ["$mocha"]
      },
      {
        "label": "Start Server",
        "type": "shell",
        "command": "npm start",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$tsc"],
        "isBackground": true
      }
    ]
  }
  